{{!-- Homepage starts here --}}
  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <p>{{blog.content}}</p>
    </div>
    {{/each}}
  </div>
  {{/if}}